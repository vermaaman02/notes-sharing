# Backend Environment Variables for Render

PORT=5000
NODE_ENV=production

# Database - Replace with your Azure Cosmos DB connection string
MONGODB_URI=your_azure_cosmos_db_connection_string

# JWT Secret - Use a strong secret key
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random

# Admin Credentials
ADMIN_EMAIL=admin@notessharing.com
ADMIN_PASSWORD=admin123

# Azure Storage - Replace with your Azure Storage connection string
AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string
AZURE_CONTAINER_NAME=notes-files

# CORS - Update with your Vercel frontend URL after deployment
CORS_ORIGIN=https://your-vercel-app.vercel.app